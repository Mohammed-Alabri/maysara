@model ShoppingCart
@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>Shopping Cart</h2>

@if (Model == null || Model.Items.Count == 0)
{
    <div class="alert alert-info">
        <h4>Your cart is empty</h4>
        <p>Browse our restaurants and add some delicious items!</p>
        <a asp-action="Index" class="btn btn-primary">Browse Restaurants</a>
    </div>
}
else
{
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@Model.RestaurantName</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Subtotal</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td><strong>@item.ProductName</strong></td>
                                <td>$@item.Price.ToString("0.00")</td>
                                <td>
                                    <form asp-action="UpdateCartItem" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@item.ProductID" />
                                        <input type="number" name="quantity" value="@item.Quantity" min="1" max="999" class="form-control form-control-sm" style="width: 80px; display: inline-block;" onchange="this.form.submit()" />
                                    </form>
                                </td>
                                <td>$@item.Subtotal.ToString("0.00")</td>
                                <td>
                                    <form asp-action="UpdateCartItem" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@item.ProductID" />
                                        <input type="hidden" name="quantity" value="0" />
                                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3" class="text-end">Total:</th>
                            <th>$@Model.TotalAmount.ToString("0.00")</th>
                            <th></th>
                        </tr>
                        <tr>
                            <td colspan="5" class="text-end">
                                <em>Delivery fee will be added at checkout</em>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <a asp-action="Index" class="btn btn-secondary">Continue Shopping</a>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Checkout" class="btn btn-success btn-lg">Proceed to Checkout</a>
        </div>
    </div>
}
