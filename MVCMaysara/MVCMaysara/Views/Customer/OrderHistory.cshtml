@model List<OrderHistoryViewModel>
@{
    ViewData["Title"] = "Order History";
}

<h2>My Order History</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        <h4>No orders yet</h4>
        <p>Start ordering from our amazing restaurants!</p>
        <a asp-action="Index" class="btn btn-primary">Browse Restaurants</a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    <th>Restaurant</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Items</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    string statusClass = order.Status.ToString() switch
                    {
                        "Pending" => "badge bg-warning text-dark",
                        "Confirmed" => "badge bg-info",
                        "Preparing" => "badge bg-primary",
                        "OutForDelivery" => "badge bg-success",
                        "Delivered" => "badge bg-success",
                        "Cancelled" => "badge bg-danger",
                        _ => "badge bg-secondary"
                    };

                    <tr>
                        <td><strong>#@order.OrderID</strong></td>
                        <td>@order.RestaurantName</td>
                        <td>@order.OrderDate.ToString("MMM dd, yyyy hh:mm tt")</td>
                        <td><span class="@statusClass">@order.Status</span></td>
                        <td>@order.ItemCount items</td>
                        <td><strong>$@order.TotalAmount.ToString("0.00")</strong></td>
                        <td>
                            <a asp-action="OrderDetails" asp-route-id="@order.OrderID" class="btn btn-sm btn-primary">View Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
