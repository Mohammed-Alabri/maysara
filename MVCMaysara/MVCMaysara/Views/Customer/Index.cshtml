@model List<RestaurantListViewModel>
@{
    ViewData["Title"] = "Browse Restaurants";
}

<h2>Browse Restaurants</h2>

<!-- Search Form -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-5">
                <label class="form-label">Search by Name:</label>
                <input type="text" name="searchTerm" value="@ViewData["SearchTerm"]" class="form-control" placeholder="Restaurant name..." />
            </div>
            <div class="col-md-3">
                <label class="form-label">Min Rating:</label>
                <input type="number" name="minRating" value="@ViewData["MinRating"]" class="form-control" min="0" max="5" step="0.1" placeholder="0-5" />
            </div>
            <div class="col-md-4">
                <label class="form-label">&nbsp;</label>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Restaurant Cards -->
<div class="row">
    @if (Model.Count == 0)
    {
        <div class="col-12">
            <div class="alert alert-info">No restaurants found matching your criteria.</div>
        </div>
    }
    else
    {
        @foreach (var restaurant in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@restaurant.Name</h5>
                        <p class="card-text">
                            <strong>Address:</strong> @restaurant.Address<br />
                            <strong>Phone:</strong> @restaurant.Phone<br />
                            <strong>Rating:</strong> ‚≠ê @restaurant.Rating.ToString("0.0")<br />
                            <strong>Delivery Fee:</strong> $@restaurant.DeliveryFee.ToString("0.00")<br />
                            <span class="badge bg-info">@restaurant.ProductCount items available</span>
                        </p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="RestaurantDetails" asp-route-id="@restaurant.RestaurantID" class="btn btn-primary w-100">View Menu</a>
                    </div>
                </div>
            </div>
        }
    }
</div>
