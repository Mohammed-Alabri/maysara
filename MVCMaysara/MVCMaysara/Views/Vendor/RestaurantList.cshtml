@model List<RestaurantListViewModel>
@{
    ViewData["Title"] = "My Restaurants";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Restaurants</h2>
    <a asp-action="RestaurantCreate" class="btn btn-success">+ Add New Restaurant</a>
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        <h4>No restaurants yet</h4>
        <p>Create your first restaurant to start selling!</p>
        <a asp-action="RestaurantCreate" class="btn btn-success">Create Restaurant</a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Rating</th>
                    <th>Delivery Fee</th>
                    <th>Status</th>
                    <th>Products</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var restaurant in Model)
                {
                    <tr>
                        <td><strong>@restaurant.Name</strong></td>
                        <td>@restaurant.Address</td>
                        <td>@restaurant.Phone</td>
                        <td>‚≠ê @restaurant.Rating.ToString("0.0")</td>
                        <td>$@restaurant.DeliveryFee.ToString("0.00")</td>
                        <td>
                            @if (restaurant.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </td>
                        <td>
                            <a asp-action="ProductList" asp-route-restaurantId="@restaurant.RestaurantID" class="btn btn-sm btn-info">
                                @restaurant.ProductCount products
                            </a>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="RestaurantEdit" asp-route-id="@restaurant.RestaurantID" class="btn btn-sm btn-warning">Edit</a>
                                <form asp-action="RestaurantDelete" asp-route-id="@restaurant.RestaurantID" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this restaurant?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
