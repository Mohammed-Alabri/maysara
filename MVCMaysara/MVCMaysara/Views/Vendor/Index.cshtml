@model VendorDashboardViewModel
@{
    ViewData["Title"] = "Vendor Dashboard";
}

<h2>Vendor Dashboard</h2>
<p class="lead">Welcome, @SessionManager.GetUserName(Context)!</p>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title">Restaurants</h5>
                <h2 class="mb-0">@Model.TotalRestaurants</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title">Products</h5>
                <h2 class="mb-0">@Model.TotalProducts</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title">Total Orders</h5>
                <h2 class="mb-0">@Model.TotalOrders</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">Total Revenue</h5>
                <h2 class="mb-0">$@Model.TotalRevenue.ToString("0.00")</h2>
            </div>
        </div>
    </div>
</div>

<!-- Restaurant Performance Table -->
<div class="card">
    <div class="card-header">
        <h4 class="mb-0">Restaurant Performance</h4>
    </div>
    <div class="card-body">
        @if (Model.RestaurantStats.Count == 0)
        {
            <div class="alert alert-info">No restaurant statistics available yet.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Restaurant</th>
                            <th>Orders</th>
                            <th>Revenue</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var stat in Model.RestaurantStats)
                        {
                            <tr>
                                <td><strong>@stat.RestaurantName</strong></td>
                                <td>@stat.OrderCount</td>
                                <td>$@stat.Revenue.ToString("0.00")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Quick Actions -->
<div class="mt-4">
    <a asp-action="RestaurantList" class="btn btn-primary">Manage Restaurants</a>
    <a asp-action="RestaurantCreate" class="btn btn-success">Add New Restaurant</a>
</div>
