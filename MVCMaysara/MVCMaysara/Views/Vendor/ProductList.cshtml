@model List<Product>
@{
    ViewData["Title"] = "Product List";
    var restaurantId = ViewBag.RestaurantId as int?;
    var restaurantName = ViewBag.RestaurantName as string;
}

<div class="mb-3">
    <a asp-action="RestaurantList" class="btn btn-secondary">&larr; Back to Restaurants</a>
</div>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Products for @restaurantName</h2>
    <a asp-action="ProductCreate" asp-route-restaurantId="@restaurantId" class="btn btn-success">+ Add New Product</a>
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        <h4>No products yet</h4>
        <p>Add your first product to start selling!</p>
        <a asp-action="ProductCreate" asp-route-restaurantId="@restaurantId" class="btn btn-success">Add Product</a>
    </div>
}
else
{
    var groupedProducts = Model.GroupBy(p => p.Category).OrderBy(g => g.Key);

    @foreach (var group in groupedProducts)
    {
        <h4 class="mt-4">@group.Key</h4>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in group.OrderBy(p => p.Name))
                    {
                        <tr>
                            <td><strong>@product.Name</strong></td>
                            <td>@product.Description</td>
                            <td>$@product.Price.ToString("0.00")</td>
                            <td>@product.Stock</td>
                            <td>
                                @if (product.IsAvailable)
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Unavailable</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="ProductEdit" asp-route-id="@product.ProductID" class="btn btn-sm btn-warning">Edit</a>
                                    <form asp-action="ProductDelete" asp-route-id="@product.ProductID" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}
