@page
@model MaysaraRazorPages.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4">Admin Dashboard</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.AccessDeniedMessage))
    {
        <div class="alert alert-warning" role="alert">
            <h4>Access Denied</h4>
            <p>@Model.AccessDeniedMessage</p>
        </div>
    }
    else
    {
        <!-- Summary Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white shadow">
                    <div class="card-body">
                        <h3 class="display-4">@Model.TotalUsers</h3>
                        <p class="mb-0">Total Users</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white shadow">
                    <div class="card-body">
                        <h3 class="display-4">@Model.TotalRestaurants</h3>
                        <p class="mb-0">Restaurants</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white shadow">
                    <div class="card-body">
                        <h3 class="display-4">@Model.TotalProducts</h3>
                        <p class="mb-0">Products</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-dark shadow">
                    <div class="card-body">
                        <h3 class="display-4">@Model.TotalOrders</h3>
                        <p class="mb-0">Total Orders</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Revenue Statistics -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Total Revenue</h5>
                    </div>
                    <div class="card-body text-center">
                        <h2 class="text-success">@MaysaraRazorPages.Helpers.CurrencyHelper.FormatCurrency(Model.TotalRevenue)</h2>
                        <p class="text-muted">From delivered orders</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Average Order Value</h5>
                    </div>
                    <div class="card-body text-center">
                        <h2 class="text-info">@MaysaraRazorPages.Helpers.CurrencyHelper.FormatCurrency(Model.AverageOrderValue)</h2>
                        <p class="text-muted">Per order</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">Pending Revenue</h5>
                    </div>
                    <div class="card-body text-center">
                        <h2 class="text-warning">@MaysaraRazorPages.Helpers.CurrencyHelper.FormatCurrency(Model.PendingRevenue)</h2>
                        <p class="text-muted">From pending orders</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders by Status -->
        @if (Model.OrdersByStatus != null && Model.OrdersByStatus.Rows.Count > 0)
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Orders Breakdown by Status</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Status</th>
                                            <th>Order Count</th>
                                            <th>Total Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (System.Data.DataRow row in Model.OrdersByStatus.Rows)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="badge @GetStatusBadgeClass(row["Status"].ToString()!)">
                                                        @row["Status"]
                                                    </span>
                                                </td>
                                                <td><strong>@row["OrderCount"]</strong> orders</td>
                                                <td><strong>@MaysaraRazorPages.Helpers.CurrencyHelper.FormatCurrency((decimal)row["TotalAmount"])</strong></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Users by Role -->
        @if (Model.UsersByRole != null && Model.UsersByRole.Rows.Count > 0)
        {
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card shadow">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">Users by Role</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Role</th>
                                            <th>Count</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (System.Data.DataRow row in Model.UsersByRole.Rows)
                                        {
                                            <tr>
                                                <td>@row["Role"]</td>
                                                <td><strong>@row["UserCount"]</strong></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Top Restaurants -->
                @if (Model.TopRestaurants != null && Model.TopRestaurants.Rows.Count > 0)
                {
                    <div class="col-md-6">
                        <div class="card shadow">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0">Top Restaurants by Orders</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Restaurant</th>
                                                <th>Orders</th>
                                                <th>Revenue</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (System.Data.DataRow row in Model.TopRestaurants.Rows)
                                            {
                                                <tr>
                                                    <td>@row["RestaurantName"]</td>
                                                    <td><strong>@row["OrderCount"]</strong></td>
                                                    <td><strong>@MaysaraRazorPages.Helpers.CurrencyHelper.FormatCurrency((decimal)row["TotalRevenue"])</strong></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Database View Integration: VW_OrderSummary -->
        @if (Model.OrderSummaries != null && Model.OrderSummaries.Rows.Count > 0)
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Recent Orders (From VW_OrderSummary View)</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Order ID</th>
                                            <th>Date</th>
                                            <th>Customer</th>
                                            <th>Restaurant</th>
                                            <th>Status</th>
                                            <th>Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (System.Data.DataRow row in Model.OrderSummaries.Rows)
                                        {
                                            <tr>
                                                <td><strong>#@row["OrderID"]</strong></td>
                                                <td>@Convert.ToDateTime(row["OrderDate"]).ToString("MMM dd, yyyy")</td>
                                                <td>@row["CustomerName"]</td>
                                                <td>@row["RestaurantName"]</td>
                                                <td>
                                                    <span class="badge @GetStatusBadgeClass(row["Status"].ToString()!)">
                                                        @row["Status"]
                                                    </span>
                                                </td>
                                                <td><strong>@MaysaraRazorPages.Helpers.CurrencyHelper.FormatCurrency((decimal)row["TotalAmount"])</strong></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning text-dark",
            "Confirmed" => "bg-info",
            "Preparing" => "bg-primary",
            "OutForDelivery" => "bg-secondary",
            "Delivered" => "bg-success",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
