@page
@model MaysaraRazorPages.Pages.Orders.MyOrdersModel
@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-4">
    <h2 class="mb-4">My Order History</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    <!-- Order Statistics -->
    @if (Model.OrderStatistics != null && Model.OrderStatistics.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">Order Statistics by Status</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var stat in Model.OrderStatistics)
                            {
                                <div class="col-md-3 col-sm-6 mb-3">
                                    <div class="card text-center">
                                        <div class="card-body">
                                            <h3 class="text-primary">@stat.Count</h3>
                                            <p class="mb-0">@stat.Status</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Orders List -->
    @if (Model.Orders != null && Model.Orders.Any())
    {
        <div class="row">
            @foreach (var order in Model.Orders)
            {
                <div class="col-12 mb-3">
                    <div class="card shadow">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-md-6">
                                    <h5 class="mb-0">Order #@order.OrderID</h5>
                                    <small class="text-muted">@order.Restaurant?.Name</small>
                                </div>
                                <div class="col-md-6 text-end">
                                    <span class="badge @GetStatusBadgeClass(order.Status.ToString()) fs-6">
                                        @order.Status
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row mb-2">
                                <div class="col-md-4">
                                    <strong>Order Date:</strong> @order.OrderDate.ToString("MMM dd, yyyy hh:mm tt")
                                </div>
                                <div class="col-md-4">
                                    <strong>Payment:</strong> @order.PaymentMethod
                                </div>
                                <div class="col-md-4">
                                    <strong>Total:</strong> <span class="text-success fs-5">@MaysaraRazorPages.Helpers.CurrencyHelper.FormatCurrency(order.TotalAmount)</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <strong>Delivery Address:</strong> @order.DeliveryAddress
                                </div>
                            </div>

                            @if (order.OrderItems != null && order.OrderItems.Any())
                            {
                                <hr />
                                <h6>Order Items:</h6>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Product</th>
                                                <th>Quantity</th>
                                                <th>Unit Price</th>
                                                <th>Subtotal</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in order.OrderItems)
                                            {
                                                <tr>
                                                    <td>@item.ProductName</td>
                                                    <td>@item.Quantity</td>
                                                    <td>@MaysaraRazorPages.Helpers.CurrencyHelper.FormatCurrency(item.UnitPrice)</td>
                                                    <td>@MaysaraRazorPages.Helpers.CurrencyHelper.FormatCurrency(item.Subtotal)</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Summary -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <h4 class="text-primary">@Model.TotalOrders</h4>
                                <p class="mb-0">Total Orders</p>
                            </div>
                            <div class="col-md-4">
                                <h4 class="text-success">@MaysaraRazorPages.Helpers.CurrencyHelper.FormatCurrency(Model.TotalSpent)</h4>
                                <p class="mb-0">Total Spent</p>
                            </div>
                            <div class="col-md-4">
                                <h4 class="text-info">@MaysaraRazorPages.Helpers.CurrencyHelper.FormatCurrency(Model.AverageOrderValue)</h4>
                                <p class="mb-0">Average Order Value</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h4>No orders yet</h4>
            <p>Start ordering from your favorite restaurants!</p>
            <a asp-page="/Restaurants/Index" class="btn btn-primary">Browse Restaurants</a>
        </div>
    }
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning text-dark",
            "Confirmed" => "bg-info",
            "Preparing" => "bg-primary",
            "OutForDelivery" => "bg-secondary",
            "Delivered" => "bg-success",
            "Cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
