@page
@model MaysaraRazorPages.Pages.Orders.CartModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <h2 class="mb-4">Shopping Cart</h2>

    @if (Model.Cart == null || Model.Cart.Items.Count == 0)
    {
        <div class="alert alert-info">
            <h4>Your cart is empty</h4>
            <p>Browse restaurants and add items to your cart to get started.</p>
            <a asp-page="/Restaurants/Index" class="btn btn-primary">Browse Restaurants</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card shadow mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Items from: @Model.Cart.RestaurantName</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.Cart.Items)
                        {
                            <div class="row align-items-center border-bottom py-3">
                                <div class="col-md-5">
                                    <h6 class="mb-0">@item.ProductName</h6>
                                    <small class="text-muted">@MaysaraRazorPages.Helpers.CurrencyHelper.FormatCurrency(item.Price) each</small>
                                </div>
                                <div class="col-md-3">
                                    <form method="post" asp-page-handler="Update" class="d-inline">
                                        <input type="hidden" name="productId" value="@item.ProductID" />
                                        <div class="input-group input-group-sm">
                                            <input type="number" name="quantity" value="@item.Quantity"
                                                   min="1" max="99" class="form-control" style="max-width: 70px;"
                                                   onchange="this.form.submit()" />
                                            <span class="input-group-text">qty</span>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-md-2 text-end">
                                    <strong>@MaysaraRazorPages.Helpers.CurrencyHelper.FormatCurrency(item.Subtotal)</strong>
                                </div>
                                <div class="col-md-2 text-end">
                                    <form method="post" asp-page-handler="Remove" class="d-inline">
                                        <input type="hidden" name="productId" value="@item.ProductID" />
                                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <form method="post" asp-page-handler="Clear" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger"
                            onclick="return confirm('Clear entire cart?')">
                        Clear Cart
                    </button>
                </form>
                <a asp-page="/Restaurants/Details" asp-route-id="@Model.Cart.RestaurantID"
                   class="btn btn-secondary">
                    Continue Shopping
                </a>
            </div>

            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Items:</span>
                            <strong>@Model.Cart.TotalItems</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Subtotal:</span>
                            <strong>@MaysaraRazorPages.Helpers.CurrencyHelper.FormatCurrency(Model.Cart.TotalAmount)</strong>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-3">
                            <h5>Total:</h5>
                            <h5 class="text-success">@MaysaraRazorPages.Helpers.CurrencyHelper.FormatCurrency(Model.Cart.TotalAmount)</h5>
                        </div>
                        <a asp-page="/Orders/Checkout" class="btn btn-success w-100 btn-lg">
                            Proceed to Checkout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
