@page
@model MaysaraRazorPages.Pages.Restaurants.ManageModel
@{
    ViewData["Title"] = "Manage Restaurants";
}

<div class="container mt-4">
    <h2 class="mb-4">Manage My Restaurants</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Add/Edit Restaurant Form -->
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-header @(Model.IsEditMode ? "bg-warning text-dark" : "bg-success text-white")">
                    <h4 class="mb-0">@(Model.IsEditMode ? "Edit Restaurant" : "Add New Restaurant")</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        @if (Model.IsEditMode)
                        {
                            <input type="hidden" asp-for="Input.RestaurantID" />
                        }

                        <div class="mb-3">
                            <label asp-for="Input.Name" class="form-label"></label>
                            <input asp-for="Input.Name" class="form-control" placeholder="Enter restaurant name" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Address" class="form-label"></label>
                            <textarea asp-for="Input.Address" class="form-control" rows="2" placeholder="Enter restaurant address"></textarea>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Phone" class="form-label"></label>
                            <input asp-for="Input.Phone" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="Input.Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.DeliveryFee" class="form-label">Delivery Fee (OMR)</label>
                            <input asp-for="Input.DeliveryFee" class="form-control" placeholder="0.00" type="number" step="0.01" />
                            <span asp-validation-for="Input.DeliveryFee" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            @if (Model.IsEditMode)
                            {
                                <button type="submit" asp-page-handler="Update" class="btn btn-warning btn-lg">
                                    <i class="bi bi-save"></i> Update Restaurant
                                </button>
                                <a asp-page="/Restaurants/Manage" class="btn btn-secondary">Cancel</a>
                            }
                            else
                            {
                                <button type="submit" asp-page-handler="Add" class="btn btn-success btn-lg">
                                    <i class="bi bi-plus-circle"></i> Add Restaurant
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow mt-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Instructions</h5>
                </div>
                <div class="card-body">
                    <ul class="small mb-0">
                        <li>Fill in the form to add a new restaurant</li>
                        <li>Click "Edit" to modify an existing restaurant</li>
                        <li>Click "Deactivate" to hide a restaurant from customers</li>
                        <li>All fields are required except for special cases</li>
                        <li>Delivery fee must be between 0 and 100 OMR</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Restaurants List -->
        <div class="col-md-7">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">My Restaurants</h4>
                </div>
                <div class="card-body">
                    @if (Model.VendorRestaurants != null && Model.VendorRestaurants.Rows.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Address</th>
                                        <th>Phone</th>
                                        <th>Fee (OMR)</th>
                                        <th>Rating</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (System.Data.DataRow restaurant in Model.VendorRestaurants.Rows)
                                    {
                                        <tr>
                                            <td><strong>@restaurant["Name"]</strong></td>
                                            <td class="small">@restaurant["Address"]</td>
                                            <td class="small">@restaurant["Phone"]</td>
                                            <td>@string.Format("{0:0.00}", restaurant["DeliveryFee"])</td>
                                            <td>
                                                <span class="badge bg-warning text-dark">
                                                    @string.Format("{0:0.0}", restaurant["Rating"])
                                                </span>
                                            </td>
                                            <td>
                                                @if (Convert.ToBoolean(restaurant["IsActive"]))
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                @if (Convert.ToBoolean(restaurant["IsActive"]))
                                                {
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <a asp-page="/Restaurants/Manage"
                                                           asp-route-editId="@restaurant["RestaurantID"]"
                                                           class="btn btn-warning"
                                                           title="Edit">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <form method="post" asp-page-handler="Deactivate" class="d-inline">
                                                            <input type="hidden" name="restaurantId" value="@restaurant["RestaurantID"]" />
                                                            <button type="submit"
                                                                    class="btn btn-danger"
                                                                    title="Deactivate"
                                                                    onclick="return confirm('Are you sure you want to deactivate this restaurant?');">
                                                                <i class="bi bi-x-circle"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted small">Inactive</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <h5>No restaurants yet</h5>
                            <p class="mb-0">Add your first restaurant using the form on the left.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
