@page
@model MaysaraRazorPages.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Delete Product</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.ErrorMessage
                        </div>
                        <a asp-page="/Products/Create" class="btn btn-secondary">Back to Products</a>
                    }
                    else if (Model.Product != null)
                    {
                        <div class="alert alert-warning">
                            <h5>Are you sure you want to delete this product?</h5>
                            <p class="mb-0">This action cannot be undone.</p>
                        </div>

                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">@Model.Product.Name</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="mb-1"><strong>Restaurant:</strong> @Model.RestaurantName</p>
                                        <p class="mb-1"><strong>Category:</strong> @Model.Product.Category</p>
                                        <p class="mb-1"><strong>Price:</strong> @MaysaraRazorPages.Helpers.CurrencyHelper.FormatCurrency(Model.Product.Price)</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="mb-1"><strong>Stock:</strong> @Model.Product.Stock units</p>
                                        <p class="mb-1">
                                            <strong>Status:</strong>
                                            @if (Model.Product.IsAvailable)
                                            {
                                                <span class="badge bg-success">Available</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Unavailable</span>
                                            }
                                        </p>
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(Model.Product.Description))
                                {
                                    <hr />
                                    <p class="mb-0"><strong>Description:</strong> @Model.Product.Description</p>
                                }
                            </div>
                        </div>

                        <form method="post">
                            <input type="hidden" asp-for="Product.ProductID" />
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-danger btn-lg">
                                    <i class="bi bi-trash"></i> Yes, Delete Product
                                </button>
                                <a asp-page="/Products/Create" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            Product not found or you don't have permission to delete it.
                        </div>
                        <a asp-page="/Products/Create" class="btn btn-secondary">Back to Products</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
